{
  "manifest_version": 3,
  "name": "Zero-Click Threat Detector",
  "version": "1.0",
  "description": "Detects if visited websites are suspicious",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "popup.js"
  }
}
